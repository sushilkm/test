{
    "name": "googletranslate",
    "product_version": "1.0.1",
    "sdl_version": "1.0.0",
    "vendor": "HPE",
    "components": [
        {
            "name": "csm-side-car",
            "version": "1.0",
            "vendor": "HPE",
            "external_name": "google-translate-csm-side-car",
            "image": "docker-registry.helion.space:443/service-catalog/catalog-service-manager:latest",
            "min_RAM_mb": 50,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": [],
            "affinity": [],
            "labels": [
                "google-translate",
                "csm"
            ],
            "min_instances": 1,
            "max_instances": 1,
            "retry_count": 5,
            "service_ports": [
                {
                    "name": "csm-api",
                    "protocol": "TCP",
                    "source_port": 8081,
                    "target_port": 8081,
                    "public": false
                }
            ],
            "parameters": [
                {
                    "name": "CSM_API_KEY"
                },
                {
                    "name": "CSM_PARAMETERS"
                },
                {
                    "name": "API_KEY"
                }
            ]
        }
    ],
    "parameters": [
        {
            "name": "API_KEY",
            "description": "Google API Key",
            "example": "36XXX14-2f7c-4XXd-aX12-eXXX35bXXX0a",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "CSM_PARAMETERS",
            "description": "Parameters for the csm side-car to be supplied to application on bind",
            "default": "API_KEY",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "CSM_API_KEY",
            "description": "CSM side-car api key",
            "default": "csm-auth-token",
            "example": "csm-auth-token",
            "data_type": "string",
            "required": true,
            "secret": false
        }
    ]
}
