{
  "name": "rds-postgres",
  "product_version": "9.4.0",
  "sdl_version": "0.1.223",
  "vendor": "HPE",
  "volumes": [],
  "components": [
    {
      "name": "csm-side-car",
      "external_name": "postgres-csm-side-car",
      "workload_type": "container",
      "version": "0.1.223",
      "vendor": "HPE",
      "image": "docker-registry.helion.space:443/catalog-service-manager/csm-dev-postgres:0.1.223",
      "min_RAM_mb": 50,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "affinity": [],
      "labels": ["postgres-csm"],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "postgres-csm",
          "protocol": "TCP",
          "source_port": 8081,
          "target_port": 8081,
          "public": false
        }
      ],
      "volume_mounts": [],
      "parameters": [
        {
          "name": "SERVICE_POSTGRES_HOST"
        },
        {
          "name": "SERVICE_POSTGRES_PORT"
        },
        {
          "name": "SERVICE_POSTGRES_DBNAME"
        },
        {
          "name": "SERVICE_POSTGRES_USER"
        },
        {
          "name": "SERVICE_POSTGRES_PASSWORD"
        },
        {
          "name": "SERVICE_POSTGRES_SSLMODE"
        },
        {
          "name": "CSM_API_KEY"
        }
      ]
    }
  ],
  "parameters": [
    {
      "name": "SERVICE_POSTGRES_HOST",
      "description": "RDS endpoint DNS Name for postgres database",
      "example": "postgres",
      "required": true,
      "secret": false
    },
    {
      "name": "SERVICE_POSTGRES_PORT",
      "description": "RDS endpoint port for postgres database",
      "example": "postgres",
      "required": true,
      "secret": false
    },
    {
      "name": "SERVICE_POSTGRES_USER",
      "description": "Postgres master username",
      "example": "postgres",
      "required": true,
      "secret": false,
      "default": "postgres"
    },
    {
      "name": "SERVICE_POSTGRES_DBNAME",
      "description": "Postgres database name",
      "example": "postgres",
      "required": true,
      "secret": false,
      "default": "postgres"
    },
    {
      "name": "SERVICE_POSTGRES_PASSWORD",
      "description": "Postgres master password",
      "example": "changeme",
      "required": true,
      "secret": false
    },
    {
      "name": "SERVICE_POSTGRES_SSLMODE",
      "description": "SSL for postgress connection",
      "example": "disable",
      "required": true,
      "secret": false,
      "default": "disable"
    },
    {
      "name": "CSM_API_KEY",
      "description": "API Key used to authenticate consumers of the sidecar API",
      "example": "my-secret-key",
      "required": true,
      "secret": false
    }
  ]
}
